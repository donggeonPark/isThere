<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2237"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    tools:context="samsung.sec.com.isthere.MainActivity">

    <!-- <include layout="@layout/content_main" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textHI"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Hi ,"
                android:textAlignment="textStart"
                android:textColor="#ffffff"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textIsthere"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Is there a"
                android:textAlignment="textStart"
                android:textColor="#ffffff"
                android:textSize="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="80dp"
                android:layout_weight="0.41"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="15dp"
                    android:background="@drawable/appbarshape"
                    android:elevation="4dp"
                    android:text="product"
                    android:textColor="#53A0FE"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textplace"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:elevation="4dp"
                    android:paddingTop="15dp"
                    android:text="place"
                    android:textColor="#9e9797"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
