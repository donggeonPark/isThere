<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_height="210dp"
    android:background="@drawable/listviewshape"
    android:elevation="2dp"
    android:layout_marginRight="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemListlayoutcurrentid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_img_current_back"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="bottom" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ToggleButton
                        android:id="@+id/toggleButton2_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/toggle"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/martname_current_back"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#252525"
                        android:textSize="17dp"
                        android:gravity="bottom"
                        android:text="test"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/martposition_current_back"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#252525"
                        android:gravity="center_vertical"
                        android:text="test"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/martdistance_current_back"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#252525"
                        android:textSize="14dp"
                        android:gravity="top"
                        android:text="test"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~중간라인~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                ></LinearLayout>
            <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~제품명 갯수~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
            <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~예약하기~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->


            <LinearLayout
                android:id="@+id/layout_itemcount_back"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemid_current_back"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="test"
                    android:ellipsize="marquee"
                    android:textColor="#252525"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemcount_current_back"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#53A0FE"
                    android:gravity="center"
                    android:text="test"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewReserve1_back"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:background="@drawable/reserveshape"
                        android:text="예약하기"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>