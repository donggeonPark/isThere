<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/listviewshape"
        android:id="@+id/itemListlayoutcurrentid"
        android:elevation="2dp"
        android:layout_height="200dp"
        android:layout_marginRight="10dp"
        android:layout_width="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itemid_current"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textColor="#252525"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:background="@drawable/toggle"
                    android:id="@+id/toggleButton2"
                    android:layout_gravity="right"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>
            <LinearLayout
                android:background="@drawable/border"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemcount_current"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_width="wrap_content"
                    android:textColor="#dc2a2a"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemcount_current_else"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="개 남음"
                    android:textColor="#252525"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_img_current"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    />

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/martname_current"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="#252525"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/martposition_current"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="#252525"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/martdistance_current"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="#252525"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:background="@drawable/reserveshape"
                    android:gravity="center"
                    android:id="@+id/textViewReserve1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:text="예약하기"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>