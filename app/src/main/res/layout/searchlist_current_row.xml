<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_height="210dp"
    android:background="@drawable/listviewshape"
    android:elevation="2dp"
    android:layout_marginRight="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemListlayoutcurrentid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemid_current"
                    android:layout_width="102dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="허니"
                    android:textAlignment="viewStart"
                    android:textColor="#252525"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/toggleButton2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="bottom"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/toggle"
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/border_card"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemcount_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#53A0FE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemcount_current_else"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="개 남음"
                    android:textColor="#53A0FE"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_img_current"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/martname_current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="#252525"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/martposition_current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="#252525"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/martdistance_current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:textColor="#252525"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.71">

                <TextView
                    android:id="@+id/textViewReserve1"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:background="@drawable/reserveshape"
                    android:gravity="center"
                    android:text="예약하기"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>