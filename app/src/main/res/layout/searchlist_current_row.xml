<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_height="200dp"
    android:background="@drawable/listviewshape"
    android:elevation="2dp"
    android:layout_marginRight="6dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout_up"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/toggle"
            android:textOff=""
            android:textOn="" />

        </FrameLayout>

    <TextView
        android:id="@+id/itemid_current"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="item title"
        android:textColor="#252525"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_img_current"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/item_layout_current"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/martname_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingBottom="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#252525"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/martposition_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="#252525"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/martdistance_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="2dp"
                android:textColor="#252525"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/textViewReserve1"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/reserveshape"
                    android:gravity="center"
                    android:text="예약하기"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
</LinearLayout>